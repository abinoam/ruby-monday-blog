<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h1>
        <span class="glyphicon glyphicon-tag small"></span>
        <%= @tag.content %>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-2 show-tag-posts">
      <% @posts.each do |post| %>
        <%= render partial: 'posts/preview', locals: { post: post, hide_tags: true } %>
      <% end %>
    </div>
  </div>
</div>
