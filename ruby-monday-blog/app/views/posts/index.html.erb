<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-2">
			<h1>Welcome to the Blog</h1>	
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-2 show-all-posts">
			<% @posts.each do |post| %>
			  <h2> <%= post.title %></h2>
			  <p><%= post.body %></p>
			  <p>Created at: <%= post.created_at %></p>
				<span class="glyphicon glyphicon-tags" aria-hidden="true"></span> 
				&nbsp;
			      <% post.tags.each do |tag| %>
			        <button class="btn btn-default btn-sm"><%= tag.content %></button>

			        <% end %>
			        <br />
			        <button type="button" class="btn btn-link">View Comments</Button>
			        	<!-- View Comments should link to the corresponding post page -->
			        <hr />
			      <% end %>
		</div>
		<%= render 'sidebar' %>
	</div>
</div>
