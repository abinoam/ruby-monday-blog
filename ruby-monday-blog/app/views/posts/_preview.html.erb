<hr />
<%= div_for post, class: 'post-preview' do %>
  <%= link_to post, class: 'post-title' do %>
    <h2><%= post.title %></h2>
  <% end %>

  <p class="post-timestamp">Posted <%= time_ago_in_words post.created_at %>&nbsp;ago</p>
  <p class="post-body"><%= post.body %></p>

  <div class="clearfix">
    <%= link_to 'View Comments', post_path(post, anchor: 'comments'), class: 'btn btn-link pull-right' %>
    <%= render 'tags/inline', tags: tags %>
  </div>
<% end %>
