<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-2">
			<h1>SHOW POST</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-2 show-post">
			<h2><%= @post.title %></h2>
			<p>
				<% if @post.image %>
					<%= image_tag @post.image.url(:thumb), class: 'blog-img' %>
				<% end %>

				<%= @post.body %>
			</p>
			<p>
			<%= render 'tags/inline', tags: @post.tags %>
			</p>
			<hr />
			<div class="row">
				<div class="col-md-12 comments" id="comments">
					<h2>COMMENTS</h2>
					<p>Coming Soon</p>
				</div>
			</div>
		</div>
		<%= render 'sidebar' %>
	</div>


</div>
